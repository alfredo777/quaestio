<div class="row">
  <h1>Editar Cuestionario</h1>
  <%= form_for @cuestionario, :url => update_cuestionario_path(@cuestionario.id) do |f|%>
  <div class="form-group">
    <%= f.text_field :titulo, placeholder: "TÃ­tulo", class: "form-control"%><br/>
    <%= f.text_area :instrucciones, placeholder: "Instrucciones",  class: "form-control"%><br/>
  </div>
  <fieldset id="preguntas">
    <br/>
    <%= f.fields_for :preguntas  do |fd| %>
    <%= render partial: "/manager/pregunta_fields", locals: {f: fd}%>
    <%end%>
    <%= link_to_add_association 'Agregar Pregunta', f, :preguntas, :class => 'btn btn-info' %>
    <%= f.submit 'Publicar el cuestionario', class: "btn btn-success pull-right"%>
  </fieldset >
  <%end%>
  <script type="text/javascript">
  $(document).ready(function(){
  $("#preguntas a.add_fields").
  data("association-insertion-position", 'before').
  data("association-insertion-node", 'this');
  });
  </script>
<br/><br/>
</div>