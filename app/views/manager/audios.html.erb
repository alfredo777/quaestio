<% content_for(:body_attributes) do %>
data-no-turbolink="true"
<% end %>
<h1>Audios</h1>
<div id="sm2-container"></div>
<div class="row ">
  <% @audios.each do |audio|%>
  <center>
  <div class="col-md-2 ">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= audio.idx %>
        <%= image_tag('audio.png', width: "100%")%>
        <%= audio.audio_file.url.split("/").last %><br/>
        <a href="<%= audio.audio_file.url %>" download>Descargar Audio <i class="fa fa-download" aria-hidden="true"></i> </a>
      </div>
    </div>
  </div>
  </center>
  <%end%>
  <center>
  <%= will_paginate @audios, renderer: BootstrapPagination::Rails %>
  </center>
</div>
<script type="text/javascript">
$('.audio-setup').each(function() {
$this = $(this);
soundManager.setup({
url: $(this).data('url'),
onready: function() {
var mySound = soundManager.createSound({
id: $(this).attr('id'),
url:$(this).data('url')
});
mySound.play();
},
ontimeout: function() {
// Hrmm, SM2 could not start. Missing SWF? Flash blocked? Show an error, etc.?
}
});
});
</script>