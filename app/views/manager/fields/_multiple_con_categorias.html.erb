<div class="nested-fields col-md-12 preguntaz">
<div class="number"></div>
  <div class="row panel panel-survey">
    <div class="col-md-12" style="margin-top: -35px;">
      <br/>
      <div style="margin-right: -16px;">
      <%=  link_to_remove_association("X", f, :class => 'btn btn-default pull-right remove',  data: {confirm: '¿Estas seguro de eliminar la pregunta?'}) %></div>
    </div>
    <br/>
    <div class="form-group">
      <div class="col-md-12">
        <div class="col-md-12">
          <%= f.hidden_field :tipo, value: "mtcat" %>
          <h4>Escribe las pregunta</h4>
          <%= f.text_field :titulo, placeholder: "Pregunta", class: "form-control"%><br/>
          <%= f.file_field :imagen %>
          <br/><br/>
        </div>
        <div class="col-md-12 modelre" >
          <h4>Zona de respuesta</h4>
          <%= f.text_area :descripccion, placeholder: "Descripcción de la pregunta", class: "form-control"%>
          <br/>
          <div class="col-md-6 panel" style="border: solid 1px #eee;">
          <br/>
          <fieldset id="respuestas" class="multiple tiporespuesta" style="padding: 20px;">
            <%= link_to_add_association 'Agregar Respuesta', f, :respuestas, force_non_association_create: false,class:"btn btn-default pull-right", partial: '/manager/fields/respuesta_fields_no_pase_con_valor' %>
          </fieldset>
          </div>
          <div class="col-md-1"></div>
          <div class="col-md-5 panel" style="border: solid 1px #eee;">
          <br/>
          <fieldset style="padding: 20px;">
            <%= link_to_add_association 'Agregar Categoría', f, :categorias_en_pregunta, force_non_association_create: false,class:"btn btn-default pull-right", partial: '/manager/fields/categoria' %>
          </fieldset>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  IndexIntroForm();
  RemoveItem();

</script>